
		<h2>Scribble <span id="target"><%= @type.full_name %></span> in <span id="timer">10</span> seconds!</h2>

		<div id="palette">
			<div class="colour colour1">1</div>
			<div class="colour colour2">2</div>
			<div class="colour colour3">3</div>
			<div class="colour colour4">4</div>
			<div class="colour colour5">5</div>
			<div class="colour colour6">6</div>
			<div class="colour colour7">7</div>
			<div class="colour colour8">8</div>
			<div class="colour colour9">9</div>
			<div class="colour colour0">0</div>
			<div class="clear"></div>
		</div>
		<div id="canvas-container">
			<canvas id="canvas" width="500" height="300">
				<p>Your browser doesn't support canvas! Sorry buddy, come back with a modern browser.</p>
			</canvas>
			<span id="cover">Start</span>
		</div>

		<form id="submit" method="post" action="save" onsubmit="return setImageData()" >
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<input name="type_id" value="<%= @type.id %>" type="hidden">
			<input id="data" name="data" value="" type="hidden" />
		</form>

		<div id="flash"></div>

<%= javascript_include_tag 'game' %>